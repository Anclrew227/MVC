@model WebApplication1.ViewModels.AlbumViewModel


@if (User.Identity.IsAuthenticated)
{
    <input class="btn btn-default" type="button" value="上傳圖片" data-toggle="modal" data-target="#UploadModal" />
    <div class="modal fade" id="UploadModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="modal-title">@Html.DisplayNameFor(model => model.upload)</h3>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @using (Html.BeginForm("Create", "Album", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                @Html.LabelFor(model => model.upload, new { @class = "col-xs-4 form-label" })
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(model => model.upload, new { @class = "form-control", type = "file" })
                                    @Html.ValidationMessageFor(model => model.upload, null, new { @class = "label label-danger" })
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <input class="btn btn-primary" id="UploadBtn" type="button" value="上傳圖片" />
                    <input class="btn btn-danger" data-dismiss="modal" type="button" value="取消" />
                </div>
            </div>
        </div>
    </div>
}
else
{
    <text>要上傳相片，請先</text>
    @Html.Action("登入", "Login", "Members")
}