@model WebApplication1.ViewModels.ArticleIndexViewModal


@{ int rank = 1;}
<div class="page-header">
    <h2>人氣文章列表</h2>
</div>
<div id="ShowPopular">
    <table class="table table-hover">
        @if (!Model.DataList.Count.Equals(0))
        {
            <thead>
                <tr>
                    <th class="text-center">
                        排名
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.DataList[0].Title)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.DataList[0].Watch)
                    </th>
                </tr>
            </thead>
            foreach (var item in Model.DataList)
            {
                <tr>
                    <td class="text-center">
                        @rank
                        @{ rank++;}
                    </td>
                    <td class="text-center">
                        @Html.ActionLink(item.Title, "Article", new { A_Id = item.A_Id })
                    </td>
                    <td class="text-center">
                        @item.Watch
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    尚無文章
                </td>
            </tr>
        }
    </table>
</div>
