@model WebApplication1.Models.Article


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <div class="modal-title">
                <h2>新增文章</h2>
            </div>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                @using (Html.BeginForm("CreateArticle", "Blog", new { }, FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.Account, new { @class = "form-label col-xs-4" })
                        <div class="col-xs-8">
                            @User.Identity.Name
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "form-label col-xs-4" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @name = "Title" })
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Content, new { @class = "form-label col-xs-4" })
                        <div class="col-xs-8">
                            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @name = "Content" })
                            @Html.ValidationMessageFor(model => model.Content)
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="modal-footer">
            <button id="CreateBtn" class="btn btn-primary">新增文章</button>
            <button class="btn btn-danger" data-dismiss="modal">取消</button>
        </div>
    </div>
</div>
